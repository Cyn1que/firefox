{
    "name": "CopyMeThat Add Recipe Button",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Proof-of-concept for CopyMeThat add recipe button extension",

    "permissions": [
        "activeTab",
        "*://button.copymethat.com/*"
    ],

    "commands": {
        "CopyMeThat": {
            "suggested_key": {
                "default": "Ctrl+Alt+D"
            }
        }
    },

    "web_accessible_resources": [
        "icons/exists.gif",
        "icons/spinner_25.gif"
    ],

    "background": {
        "scripts": ["files/background.js"]
    },

    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png"
        }
    }

}